<!DOCTYPE html>
<html>
<head>
	<meta charset="UTF-8">
	<title>Friend-Tracker Beta</title>
	<link rel="stylesheet" href="stylesheets/bootstrap.css">
	<link rel="stylesheet" type="text/css" href="stylesheets/style.css">
	<link href='http://fonts.googleapis.com/css?family=Lobster+Two:400,700italic' rel='stylesheet' type='text/css'>
</head>

<body>
	<!-- facebook cut and paste -->
	<script src="javascripts/fb.js"></script>
	<div class="container">
		<h1 id="title"><a>FriendStalkerPro</a></h1>
		<div id="login-bar">
			<div
			class="fb-like"
			data-send="true"
			data-width="450"
			data-show-faces="true">
		</div>
		<form action="#" id="username-form">
			Username <input class="form-control" type="text" name="Username" id="username_input"><br>
		</form>
		<form action="#" id="password-form">
			Password <input class="form-control" type="password" name="Password" id="password_input">
		</form>
		<button type="submit" class="btn btn-default" id="sign-in-btn" onclick="validate()">Sign in</button>
		<p id = "login_message"></p>
	</div>
	<fb:login-button id="fbButton"scope="user_friends,user_tagged_places" onlogin="checkLoginState();">
</fb:login-button>
<div id="button-group">
	<button id="wrapper-first-element" type="button" class="btn btn-warning group-tab">Who's where?</button>
	<button type="button" class="btn btn-primary group-tab">Groups</button>
	<button type="button" class="btn btn-success group-tab" onclick="fbLogout();">Logout</button>
	<form id="friend-search" role="form">
		<label class="sr-only" for="exampleInputEmail2">Search for someone!</label>
		<input type="email" class="form-control" id="exampleInputEmail2" placeholder="Search for someone!">
	</form>
	<button type="button" class="btn btn-info" id="hide-button" onclick="contenthider()">Hide</button>

</div>
<div
class="fb-like"
data-share="true"
data-width="450"
data-show-faces="true">
</div>
<!-- this is the container for the friends viewing pane -->
<div id="content-wrapper">
	<!-- this is the container for each friend. This is now inserted dynamically using gmap.js when maekers are generated. -->
	<p>{{>test}}</p>
</div>
</div>
<button type="button" id="map-hider" onclick="maphider()"class="btn btn-info">Hide Map</button>
<!-- This is the google map  plug in. -->
<div id="map-canvas"></div>
<!-- This is the chat box and container-->
<div id="chat-box">
	<p>som text</p>
	<textarea class="form-control" rows="3"></textarea>
</div>
</body>
<!-- JQuery include -->
